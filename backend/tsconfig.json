{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": [
            "node"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "pretty": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
    },
    "ts-node": {
        "compilerOptions": {
          "esModuleInterop": true,
          "module": "commonjs",
          "moduleResolution": "node",
          "noEmit": true,
          "allowSyntheticDefaultImports": true
        }
      },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.js",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}